@{ 
    var imageRoot = "/images/fav";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>passcache</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="apple-touch-icon" sizes="57x57" href="@imageRoot/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="@imageRoot/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="@imageRoot/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="@imageRoot/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="@imageRoot/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="@imageRoot/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="@imageRoot/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="@imageRoot/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="@imageRoot/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="@imageRoot/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="@imageRoot/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="@imageRoot/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="@imageRoot/favicon-16x16.png">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="images/fav/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="wrapin">
        <div class="wrapout">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12  col-sm-10 col-sm-offset-1 col-md-offset-2 col-md-8">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="git">
        <small>ASP.Net Core 2.0</small>
        <a href="https://github.com/vsliouniaev/pass-cache">
            <img alt="github" src="~/images/GitHub-Mark-32px.png" height="25" width="25" />
        </a>
    </div>

    @RenderSection("scripts", required: false)

    <script src="~/lib/sjcl/sjcl.js"></script>
    <script src="~/js/uheprng.js"></script>
    <environment names="Development">
        <script src="~/js/site.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>


</body>
</html>
